# Server Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Server Port
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# CORS Configuration
# Set to 'true' to allow all origins (development only)
ALLOW_ALL_CORS=false

# Node Environment
NODE_ENV=development

# JWT Secret (REQUIRED - generate a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-jwt-key-here-change-in-production

# Default User Passwords (REQUIRED in production)
# These are used to initialize default users on first run
# Generate strong passwords and set these in production
DEFAULT_OWNER_PASSWORD=change-this-strong-password
DEFAULT_ADMIN_PASSWORD=change-this-strong-password
DEFAULT_USER_PASSWORD=change-this-strong-password

# Client-side Configuration (VITE_ prefix exposes to client bundle)
# WARNING: Only use VITE_ for non-sensitive configuration
# API URL for frontend
VITE_API_URL=http://localhost:3001/api

# Parse Configuration (if using Parse/Back4App)
# NOTE: These should NOT use VITE_ prefix as they contain secrets
# Move Parse configuration to server-side only
# PARSE_APPLICATION_ID=your-parse-app-id
# PARSE_REST_API_KEY=your-parse-rest-api-key
# PARSE_MASTER_KEY=your-parse-master-key
# PARSE_SERVER_URL=your-parse-server-url

# Contact Phone (if needed - consider if this is public business contact)
# VITE_CONTACT_PHONE=+1-XXX-XXX-XXXX
